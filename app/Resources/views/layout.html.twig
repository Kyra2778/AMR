{# app/Resources/views/layout.html.twig #}

<!DOCTYPE HTML>
<html>
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
		<title>{% block title %}Speedy AMR Admin{% endblock %}</title>
		{% block stylesheets %}
		    <link rel="stylesheet" href="{{ asset('css/app.css') }}"type="text/css" />
		    <link rel="stylesheet" href="{{ asset('css/foundation.css') }}"type="text/css" />
		{% endblock %}
	</head>
	<body>
	    <div class="row">
	        <div class="large-12 columns">
	            <div class="row">
	                <a href="{{ path('cars_home') }}">
    	                <div class="large-12 columns">
        	                <div id="header" class="header-unit">
            					<h1>Administration Speedy AMR</h1>
            					<h2>{% block sousTitreHeader %}{% endblock %}</h2>
            				</div>
        				</div>
    				</a>
	            </div>

	            <div class="row">
        	        <div class="large-3 columns">
        	            <div id="menu" class="menu">
        	                <ul id="menu-accordeon">
        	                    <h3 class="buttonAMR">Menu</h3>
                                <li><a href="{{ path('cars_index') }}">Véhicules</a>
                                    <ul>
                                        <li><a href="{{ path('cars_list') }}">Véhicules</a></li>
                                        <li><a href="{{ path('specifications_index') }}">Caractéristiques</a></li>
                                        <li><a href="{{ path('options_index') }}">Equipements</a></li>
                                    </ul>
                                </li>
                                <li><a href="{{ path('customer_index') }}">Clients</a></li>
                            </ul>
        	            </div>
        	        </div>
        	        <div class="large-9 columns">
                        {% block body %}
                        {% endblock %}
        	        </div>
        	    </div>
        	    <hr>
        	    <footer>
        			<p>De Sousa Team :-)</p>
        		</footer>
			</div>
	    </div>

		{% block javascripts %}
			<script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
			<script type="text/javascript" src="{{ asset('js/foundation.js') }}"></script>
		{% endblock %}
	</body>
</html>